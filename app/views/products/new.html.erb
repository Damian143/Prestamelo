<h1>New Product</h1>

<%= form_for :product, url: products_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <p>
  <%= link_to 'Back', products_path %>
  </p>

<% end %>
